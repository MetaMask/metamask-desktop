{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["test/**", "**/*.test.ts", "dist/**", "node_modules/**"],
  "extends": "@tsconfig/node16/tsconfig.json",
  "paths": {
    "*": ["./types/*"]
  }
}
