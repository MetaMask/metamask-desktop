{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "test/**",
    "**/*.test.ts",
    "dist/**",
    "node_modules/**",
    "coverage/**",
    "*.config.js*"
  ],
  "extends": "@tsconfig/node16/tsconfig.json",
  "paths": {
    "*": ["./types/*"]
  }
}
