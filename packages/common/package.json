{
  "name": "@metamask/desktop",
  "version": "0.1.1",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/desktop.git"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rimraf dist && tsc --build",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:tsc",
    "lint:fix": "yarn lint:prettier:fix && yarn lint:eslint:fix",
    "lint:prettier": "prettier '**/*.json' --check",
    "lint:prettier:fix": "prettier '**/*.json' --write",
    "lint:eslint": "eslint . --ext js,ts --cache",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "publish": "yarn npm publish"
  },
  "dependencies": {
    "@metamask/obs-store": "^5.0.0",
    "eciesjs": "^0.3.15",
    "end-of-stream": "^1.4.4",
    "extension-port-stream": "^2.0.0",
    "loglevel": "^1.8.0",
    "obj-multiplex": "^1.0.0",
    "otpauth": "^8.0.3",
    "uuid": "^9.0.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.16.7",
    "@lavamoat/allow-scripts": "^2.0.3",
    "@metamask/eslint-config": "^9.0.0",
    "@metamask/eslint-config-jest": "^9.0.0",
    "@metamask/eslint-config-nodejs": "^9.0.0",
    "@metamask/eslint-config-typescript": "^9.0.1",
    "@tsconfig/node16": "^1.0.3",
    "@types/end-of-stream": "^1.4.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "jest-junit": "^14.0.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.5.0"
  },
  "lavamoat": {
    "allowScripts": {
      "eciesjs>secp256k1": false
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
