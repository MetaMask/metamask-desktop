{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "yarn common build && concurrently -n extension,ui,app  \"yarn extension build:desktop:extension\" \"yarn app build:ui\"  \"yarn app build:app\"",
    "build:lavamoat": "yarn common build && concurrently -n extension,ui,app  \"yarn extension build:desktop:extension:lavamoat\" \"yarn app build:ui:lavamoat\"  \"yarn app build:app\"",
    "setup": "yarn && yarn extension setup:postinstall && yarn app setup:postinstall && yarn common build",
    "app": "yarn workspace desktop-app",
    "common": "yarn workspace @metamask/desktop",
    "extension": "yarn workspace metamask-crx"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "concurrently": "^5.2.0",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "**/regenerator-runtime": "^0.13.7",
    "**/caniuse-lite": "^1.0.30001312",
    "**/cross-fetch": "^3.1.5",
    "**/configstore/dot-prop": "^5.1.1",
    "**/ethers/elliptic": "^6.5.4",
    "**/redux/symbol-observable": "^2.0.3",
    "**/redux-devtools-instrument/symbol-observable": "^2.0.3",
    "**/rxjs/symbol-observable": "^2.0.3",
    "**/analytics-node/axios": "^0.21.2",
    "**/ganache-core/lodash": "^4.17.21",
    "**/netmask": "^2.0.1",
    "**/pubnub/superagent-proxy": "^3.0.0",
    "**/json-schema": "^0.4.0",
    "**/simple-get": "^4.0.1",
    "**/@storybook/**/ast-types": "^0.14.2",
    "**/node-hid": "^2.1.2"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/app/submodules/extension"
    ],
    "nohoist": [
      "**/*"
    ]
  }
}
